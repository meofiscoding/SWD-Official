@model IEnumerable<App.DAL.Models.TemplateCard>

@{
    ViewData["Title"] = "Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.TypeName</h1>
@if (Model.Any())
{
    <div class="card">
        <h5 class="card-header">Template Card</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Title)</th>
                        <th> @Html.DisplayNameFor(model => model.Price)</th>
                        <th> @Html.DisplayNameFor(model => model.Status)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <a asp-action="Details" asp-controller="TemplateCards" asp-route-id="@item.TemplateId">@Html.DisplayFor(modelItem => item.Title)</a></td>
                            <td>@Html.DisplayFor(modelItem => item.Price)</td>
                            <td><span class="badge bg-label-@(item.Status == 1? "success":"danger") me-1">@(item.Status == 1? "Active":"Deactive")</span></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.TemplateId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.TemplateId"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="mt-4 d-flex align-items-center flex-column">
        <img src="~/assets/img/illustrations/girl-doing-yoga-light.png" alt="girl-doing-yoga-light" width="500" class="img-fluid" data-app-dark-img="illustrations/girl-doing-yoga-dark.png" data-app-light-img="illustrations/girl-doing-yoga-light.png">
        <p class="mb-2 mx-2"> Template Card is not created yet !</p>
        <a asp-action="Create" asp-controller="TemplateCards" class="btn btn-primary">Create Now</a>
    </div>

}
<div>
  <a asp-action="Index" class="btn my-3 btn-primary">Back to List</a>
</div>

